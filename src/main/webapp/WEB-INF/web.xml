<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd" id="WebApp_ID" version="3.1">
  <display-name>HelloServlet</display-name>
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
    <welcome-file>index.htm</welcome-file>
    <welcome-file>index.jsp</welcome-file>
    <welcome-file>default.html</welcome-file>
    <welcome-file>default.htm</welcome-file>
    <welcome-file>default.jsp</welcome-file>
    <welcome-file>login.jsp</welcome-file>
  </welcome-file-list>
  <jsp-config>
  	<taglib>
  		<taglib-uri>http://java.sun.com/jstl/fmt</taglib-uri>
  		<taglib-location>/WEB-INF/fmt.tld</taglib-location>
  	</taglib>
  	<taglib>
  		<taglib-uri>http://java.sun.com/jstl/fmt-rt</taglib-uri>
  		<taglib-location>/WEB-INF/fmt-rt.tld</taglib-location>
  	</taglib>
  	<taglib>
  		<taglib-uri>http://java.sun.com/jstl/core</taglib-uri>
  		<taglib-location>/WEB-INF/c.tld</taglib-location>
  	</taglib>
  	<taglib>
  		<taglib-uri>http://java.sun.com/jstl/core-rt</taglib-uri>
  		<taglib-location>/WEB-INF/c-rt.tld</taglib-location>
  	</taglib>
  	<taglib>
  		<taglib-uri>http://java.sun.com/jstl/sql</taglib-uri>
  		<taglib-location>/WEB-INF/sql.tld</taglib-location>
  	</taglib>
  	<taglib>
  		<taglib-uri>http://java.sun.com/jstl/sql-rt</taglib-uri>
  		<taglib-location>/WEB-INF/sql-rt.tld</taglib-location>
  	</taglib>
  	<taglib>
  		<taglib-uri>http://java.sun.com/jstl/x</taglib-uri>
  		<taglib-location>/WEB-INF/x.tld</taglib-location>
  	</taglib>
  	<taglib>
  		<taglib-uri>http://java.sun.com/jstl/x-rt</taglib-uri>
  		<taglib-location>/WEB-INF/x-rt.tld</taglib-location>
  	</taglib>
  </jsp-config>
  <filter>
  	<filter-name>encoding</filter-name>
  	<filter-class>pers.zhentao.exam.filter.EncodingFilter</filter-class>
  	<init-param>
  		<param-name>charset</param-name>
  		<param-value>UTF-8</param-value>
  	</init-param>
  </filter>
  <filter-mapping>
  	<filter-name>encoding</filter-name>
  	<url-pattern>/*</url-pattern>
  </filter-mapping>
  <filter>
  	<filter-name>loginFilter</filter-name>
  	<filter-class>pers.zhentao.exam.filter.LoginFilter</filter-class>
  	<init-param>
  		<param-name>page</param-name>
  		<param-value>/login,/index.jsp,/login.jsp,/logout</param-value>
  	</init-param>
  </filter>
  <filter-mapping>
  	<filter-name>loginFilter</filter-name>
  	<url-pattern>/*</url-pattern>
  </filter-mapping>
  
  <servlet>
  	<servlet-name>login</servlet-name>
  	<servlet-class>pers.zhentao.exam.servlet.LoginServlet</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>login</servlet-name>
  	<url-pattern>/login</url-pattern>
  </servlet-mapping>
  
  <servlet>
  	<servlet-name>showFilm</servlet-name>
  	<servlet-class>pers.zhentao.exam.servlet.ShowFilmServlet</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>showFilm</servlet-name>
  	<url-pattern>/showFilm</url-pattern>
  </servlet-mapping>
  <servlet>
  	<servlet-name>showAddFilm</servlet-name>
  	<servlet-class>pers.zhentao.exam.servlet.ShowAddFilmServlet</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>showAddFilm</servlet-name>
  	<url-pattern>/showAddFilm</url-pattern>
  </servlet-mapping>
  
  <servlet>
  	<servlet-name>addFilm</servlet-name>
  	<servlet-class>pers.zhentao.exam.servlet.AddFilmServlet</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>addFilm</servlet-name>
  	<url-pattern>/addFilm</url-pattern>
  </servlet-mapping>
  
  <servlet>
  	<servlet-name>updateFilm</servlet-name>
  	<servlet-class>pers.zhentao.exam.servlet.UpdateFilmServlet</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>updateFilm</servlet-name>
  	<url-pattern>/updateFilm</url-pattern>
  </servlet-mapping>
  
  <servlet>
  	<servlet-name>deleteFilm</servlet-name>
  	<servlet-class>pers.zhentao.exam.servlet.DeleteFilmServlet</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>deleteFilm</servlet-name>
  	<url-pattern>/deleteFilm</url-pattern>
  </servlet-mapping>
  
  <servlet>
  	<servlet-name>showUpdateFilm</servlet-name>
  	<servlet-class>pers.zhentao.exam.servlet.ShowUpdateFilmServlet</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>showUpdateFilm</servlet-name>
  	<url-pattern>/showUpdateFilm</url-pattern>
  </servlet-mapping>
  
  <servlet>
  	<servlet-name>logout</servlet-name>
  	<servlet-class>pers.zhentao.exam.servlet.LogoutServlet</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>logout</servlet-name>
  	<url-pattern>/logout</url-pattern>
  </servlet-mapping>
</web-app>
